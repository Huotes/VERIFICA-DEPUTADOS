APP_NAME=VerificaDeputados
APP_ENV=local
APP_KEY=   # será preenchido após o comando `php artisan key:generate`
APP_DEBUG=true
APP_URL=http://localhost:8080

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Conexão com o banco (PostgreSQL no container `db`)
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=verifica_deputados_postgres
DB_USERNAME=verifica_deputados_user
DB_PASSWORD=verifica_deputados_pass

# Cache e sessão (pode manter file, ou mudar para redis depois)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (para desenvolvimento, pode usar Mailtrap, ou desativar)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=verifica_deputados@local.dev
MAIL_FROM_NAME="${APP_NAME}"

# Timezone e locale
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
